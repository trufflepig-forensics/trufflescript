{
  "name": "trufflescript",
  "version": "0.1.6",
  "description": "Collection of small typescript utilities used across various projects",
  "homepage": "https://github.com/trufflepig-forensics/trufflescript",
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "doc": "typedoc --entryPoints src/index.ts src/router.ts"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 90,
    "bracketSameLine": false
  },
  "peerDependencies": {
    "react": "~18"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/react": "~18",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "tslib": "^2.5.3",
    "typedoc": "^0.24.8",
    "typescript": "~5.0",
    "vite": "^4.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "bundledDependencies": false,
  "module": "./dist/trufflescript.es.js",
  "main": "./dist/trufflescript.umd.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./router": {
      "import": "./dist/router.js",
      "types": "./dist/router.d.ts"
    }
  }
}
